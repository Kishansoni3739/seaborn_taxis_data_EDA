data['day_type'] = data['pickup'].dt.weekday.apply(
    lambda x: 'Weekend' if x >= 5 else 'Weekday'
)


data.head()


day_type_data = data.groupby('day_type')['total'].sum()


day_type_data


day_type_data.plot(kind='bar')
